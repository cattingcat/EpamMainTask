@using DataAccessors.Entity;
@model IEnumerable<Phone>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="table-responsive">
    <form action="/Phone/Delete" method="post">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Number</th>
                    <th>Owner id</th>
                    <th>Delete</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td> @p.Id </td>
                        <td> @p.Number </td>
                        <td> @p.PersonId </td>
                        <td>
                            <button type="submit" name="id" value="@p.Id" class="btn btn-xs btn-danger">Delete</button>
                        </td>
                        <td>
                            <a href="/Person/Details/@p.Id" class="btn btn-xs btn-outline" role="button">Details</a>
                        </td>
                    </tr>}
            </tbody>
        </table>
        <div class="col-sm-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Captcha</h3>
                </div>
                <div class="panel-body">
                    <img src="/captcha.jpg" />
                    <input type="number" name="captcha" />
                </div>
            </div>
        </div>
    </form>
    </form>
</div>
<div class="col-sm-4">
    <h3>Insert phone</h3>
    <a href="/Phone/Create" class="btn btn-lg btn-outline" role="button">Create phone</a>
</div>
